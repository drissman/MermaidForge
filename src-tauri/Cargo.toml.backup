[package]
name = "mermaidforge"
version = "1.0.0"
description = "Convertisseur Mermaid professionnel standalone"
authors = ["Driss NAAMANE <drissman@gmail.com>"]
license = "MIT"
repository = "https://github.com/drissman/MermaidForge"
edition = "2021"

# See more keys and their definitions at https://doc.rust-lang.org/cargo/reference/manifest.html

[build-dependencies]
tauri-build = { version = "1.5", features = [] }

[dependencies]
tauri = { version = "1.5", features = ["dialog-save", "fs-read-file", "fs-write-file", "fs-create-dir", "fs-exists", "path-all", "shell-open"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
base64 = "0.21"
reqwest = { version = "0.11", features = ["blocking"] }
tokio = { version = "1", features = ["full"] }

[features]
# this feature is used for production builds or when `devPath` points to the filesystem
# DO NOT REMOVE!!
custom-protocol = ["tauri/custom-protocol"]

[profile.release]
panic = "abort"
codegen-units = 1
lto = true
opt-level = "z"
strip = true
